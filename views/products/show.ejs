<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<link rel="stylesheet" href="/css/stars.css">

<div class="container mt-5">
    
    <%- include("../partials/flash")%>
    <div class="row">
        <div class="col-lg-6">
            <div class="card" style="width: 25rem;">
                <img src="<%= product.img%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=product.name%></h5>
                  <h5 class="card-title">â‚¹ <%=product.price%></h5>
                  <p class="card-text"><%=product.desc%></p>
                  <a href="#" class="btn btn-success">Buy</a>
                  <a href="#" class="btn btn-secondary">Add To Cart</a>
                  <a href="/products/<%=product._id%>/edit" class="btn btn-warning">Edit</a>
                  <div class="mt-3">
                    <form action="/products/<%=product._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                  </form>
                  </div>
                 
                </div>
              </div>
        </div>
        <div class="col-lg-6">
            <h5 class="display-5"> Leave a Review</h5>
            <form class="needs-validation" action="/products/<%= product._id%>/review" method="POST" style="max-width:70%;" novalidate>
                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="rating" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="rating" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="rating" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="rating" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="rating" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
            <div class="mb-3">
                <label for="desc" class="form-label">Description</label>
                    <textarea class="form-control" id="desc" cols="100" rows="4" name="comment" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
            </form>
            <div class="mb-3 mt-3">
                <% product.reviews.reverse(); %> 
                <%for(let review of product.reviews){%>
                    <div class="card mb-3">
                        <div class="card-header">
                          <%= review.user %> 
                        </div>
                        <div class="card-body">
                          <!-- <h5 class="card-title">Rating :/5</h5> -->
                          <p class="starability-result" data-rating="<%=review.rating%>">
                            Rated: <%=review.rating%> stars
                          </p>
                          <p class="card-text"><%=review.comment%></p>
                        </div>
                      </div>
                <%}%>
            </div>
        </div>
    </div>
</div>


<%- include("../partials/footer")%>