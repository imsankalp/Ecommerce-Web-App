<%- include("../partials/header")%> <%- include("../partials/navbar")%>

<div class="row d-flex justify-content-center">
	<div class="col-md-8">
		<div class="card">
			<h5 class="card-header">Payment Successful!</h5>

			<div class="card-body">
				<p class="card-text">Thank you for buying. We hope you buy some more great stuff next time!</p>

				<dl class="row mt-2">
					<dt class="col-sm-3">Order ID</dt>
					<dd class="col-sm-9" id="orderId"><%- order.orderId %>  </dd>
										
					<dt class="col-sm-3">Transaction ID</dt>
					<dd class="col-sm-9" id="orderId"><%- order.paymentId %>  </dd>

					<dt class="col-sm-3">Signature</dt>
					<dd class="col-sm-9" id="orderId"><%- order.signature %>  </dd>

					<dt class="col-sm-3">Amount</dt>
					<dd class="col-sm-9"><%- order.amount/100 %> Rs. </dd>

					<dt class="col-sm-3">Created at</dt>
					<dd class="col-sm-9"><%- order.createdAt %> </dd>
				</dl>

				<a href="/products" type="button" class="btn btn-primary">Go Home</a>
			</div>
		</div>
	</div>
</div>