<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<div class="container" style="margin-top: 5rem; height: 100vh;">

  <%- include("../partials/flash")%>

  <h5 class="display-5">My Favourites:</h5>
  
  <div class="row">
  <div class="col-lg-8">
<% if (userFavourites.length === 0){%>
    <h6 class="display-6"> No item marked as favourites!</h6>
<%} %> 
  <%for(let item of userFavourites){%>
        <div class="card mb-3" style="width: 90%;">
          <div class="row g-0">
            <div class="col-md-4">
              <img style="width: 200px;" src="<%=item.img%>" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%=item.name%></h5>
                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                
                <form action="/user/<%=currentUser._id%>/favourites/<%=item._id%>?_method=DELETE" method="post">
                  <button class="btn btn-sm btn-danger">Remove from Favourites</button>
                </form>
                <br>
                <form action="/user/<%= item._id%>/cart" method="POST">
                    <button class="btn btn-sm btn-warning">Add To Cart</button>
                  </form>
              </div>
            </div>
          </div>
        </div>
      <%}%>
  </div></div>





<%- include("../partials/footer")%>